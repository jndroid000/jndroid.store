# ==================== ENVIRONMENT SELECTION ====================
# Options: development, production
# Default: development
DJANGO_ENV=development

# ==================== DJANGO SETTINGS ====================
# Production SECRET_KEY - generate a strong one for production!
# Keep this secret!
SECRET_KEY=django-insecure-change-this-in-production

# ==================== ALLOWED HOSTS ====================
# Comma-separated list of allowed hosts for production
ALLOWED_HOSTS=localhost,127.0.0.1,jndroid.store,www.jndroid.store

# ==================== CSRF & SECURITY ====================
# Comma-separated list of origins allowed for CSRF
CSRF_TRUSTED_ORIGINS=https://jndroid.store,https://www.jndroid.store

# ==================== EMAIL CONFIGURATION ====================
# Gmail SMTP credentials
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Admin email for error reports
ADMIN_EMAIL=admin@jndroid.store

# ==================== DATABASE (Production) ====================
# Database engine (default: sqlite3)
# Options: django.db.backends.sqlite3, django.db.backends.postgresql, django.db.backends.mysql
DATABASE_ENGINE=django.db.backends.postgresql

# Database name
DATABASE_NAME=jndroid_production

# Database user
DATABASE_USER=postgres

# Database password
DATABASE_PASSWORD=your-secure-password

# Database host
DATABASE_HOST=localhost

# Database port
DATABASE_PORT=5432

# ==================== CACHING (Production) ====================
# Cache backend
# Options: django.core.cache.backends.locmem.LocMemCache, django.core.cache.backends.redis.RedisCache
CACHE_BACKEND=django.core.cache.backends.redis.RedisCache

# Redis cache location (if using Redis)
CACHE_LOCATION=redis://127.0.0.1:6379/1

# ==================== AWS S3 (Optional - for static/media files) ====================
# AWS storage bucket name
AWS_STORAGE_BUCKET_NAME=your-bucket-name

# AWS region
AWS_S3_REGION_NAME=us-east-1

# AWS access key
AWS_ACCESS_KEY_ID=your-access-key

# AWS secret access key
AWS_SECRET_ACCESS_KEY=your-secret-key
