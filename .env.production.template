# ==================== ENVIRONMENT SELECTION ====================
DJANGO_ENV=production

# ==================== DJANGO SETTINGS ====================
# IMPORTANT: Generate a new SECRET_KEY for production!
# Command: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
# Then replace the value below with the generated key
SECRET_KEY=django-insecure-change-this-to-a-real-secret-key-in-production-environment

# ==================== SECURITY ====================
DEBUG=False
ALLOWED_HOSTS=jndroid.store,www.jndroid.store,yourvpsip.xx.xxx.xx

# CSRF settings
CSRF_TRUSTED_ORIGINS=https://jndroid.store,https://www.jndroid.store

# ==================== DATABASE CONFIGURATION (PostgreSQL) ====================
# Make sure PostgreSQL is installed and running on your VPS
# Create database and user first:
# sudo -u postgres psql
# CREATE DATABASE jndroid_db;
# CREATE USER jndroid_user WITH PASSWORD 'YOUR_STRONG_PASSWORD';
# ALTER ROLE jndroid_user SET client_encoding TO 'utf8';
# ALTER ROLE jndroid_user SET default_transaction_isolation TO 'read committed';
# ALTER ROLE jndroid_user SET default_transaction_deferrable TO on;
# ALTER ROLE jndroid_user SET timezone TO 'UTC';
# GRANT ALL PRIVILEGES ON DATABASE jndroid_db TO jndroid_user;
# \q

DATABASE_ENGINE=django.db.backends.postgresql
DATABASE_NAME=jndroid_db
DATABASE_USER=jndroid_user
DATABASE_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
DATABASE_HOST=localhost
DATABASE_PORT=5432

# ==================== EMAIL CONFIGURATION ====================
# Gmail SMTP Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password-not-your-gmail-password
DEFAULT_FROM_EMAIL=your-email@gmail.com
ADMIN_EMAIL=your-email@gmail.com

# Note: For Gmail:
# 1. Enable 2-step verification on your Google Account
# 2. Generate an App Password: https://myaccount.google.com/apppasswords
# 3. Use the App Password (not your regular password) above

# ==================== CACHING ====================
CACHE_BACKEND=django.core.cache.backends.locmem.LocMemCache
CACHE_LOCATION=unique-snowflake

# ==================== STATIC & MEDIA FILES ====================
STATIC_URL=/static/
STATIC_ROOT=/var/www/jndroid.store/backend/staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=/var/www/jndroid.store/backend/media

# ==================== GUNICORN SETTINGS ====================
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=120

# ==================== LOGGING ====================
LOG_LEVEL=INFO
